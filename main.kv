<PesoApp>:
    fechainput: fecha.text
    peso: peso
    ruta: ruta
    medsomx: medsomx
    medsomn: medsomn
    medbomx: medbomx
    medbomn: medbomn

    # spacing: 1
    padding: 5
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: .8,.8,.8
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_size: ((self.height + self.width)/2)/9
            markup: True
            color: (0,0,0)
            text: "[b]Guardar registro peso\n y medidas abdominales[/b]"
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                size_hint: .1, 1 
            Label:
                size_hint: .32, 1 
                font_size: ((self.height + self.width)/2)/4.2
                markup: True
                color: (0,0,0)   
                text: "\nFecha del  \nregistro: "
            TextInput:
                id: fecha
                size_hint: .5, .6
                padding: [10,10]
                text: root.fechainput
                font_size: ((self.height + self.width)/2)/4
                multiline: False
            BoxLayout:
                size_hint: .08, 1 
        BoxLayout:
            orientation: 'horizontal'
            padding: [10,3,8,2]
            spacing: .5
            BoxLayout:
                size_hint: .05,.8
            Label:
                size_hint: .35,.8
                font_size: ((self.height + self.width)/2)/4.5
                color: (0,0,0)
                markup: True
                text: "[b]   Ruta a\n  archivo:[/b]"
            TextInput:
                id: ruta
                size_hint: .57,.8
                multinline: True
            BoxLayout:
                size_hint: .03,.8
        BoxLayout:
            orientation: 'horizontal'
            padding: 3
            spacing: 1
            Button:
                text: "Guardar"
                font_size: ((self.height + self.width)/2)/5
                on_press: root.guardar()
            Button:
                text: "Limpiar"
                font_size: ((self.height + self.width)/2)/5
                on_press: root.limpiar()
            Button:
                text: "Modif.\n ruta"
                font_size: ((self.height + self.width)/2)/5
                on_press: root.mod_rut()
            Button:
                text: "Abrir\n xlsx"
                font_size: ((self.height + self.width)/2)/5
                on_press: root.abrir_xlsx()

    GridLayout:
        cols: 2
        spacing: 1
        padding: 1
        canvas:
            Color:
                rgb: 0,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            spacing: 2
            LabelcB:
                size_hint: 1, 1
                font_size: ((self.height + self.width)/2)/5.5
                markup: True
                text: "[color=#000000]Peso (kg)[/color]"
            LabelcB:
                size_hint: 1, 1
                font_size: ((self.height + self.width)/2)/6.5
                markup: True
                text: "[color=#000000]Med.SO max\n    (cm)[/color]"
            LabelcB:
                size_hint: 1, 1
                font_size: ((self.height + self.width)/2)/6.5
                markup: True
                text: "[color=#000000]Med.SO min\n    (cm)[/color]"
            LabelcB:
                size_hint: 1, 1
                font_size: ((self.height + self.width)/2)/6.5
                markup: True
                text: "[color=#000000]Med.BO max\n    (cm)[/color]"
            LabelcB:
                size_hint: 1, 1
                font_size: ((self.height + self.width)/2)/6.5
                markup: True
                text: "[color=#000000]Med.BO min\n    (cm)[/color]"
        BoxLayout:
            orientation: 'vertical'
            spacing: 2
            canvas:
                Color:
                    rgb: .8,.8,.8
                Rectangle:
                    size: self.size
                    pos: self.pos
            CenteredTextInput:
                id: peso
                
            CenteredTextInput:
                id: medsomx
                
            CenteredTextInput:
                id: medsomn
                
            CenteredTextInput:
                id: medbomx
                
            CenteredTextInput:
                id: medbomn
                

<LabelcB@Label>:
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<CenteredTextInput@TextInput>:
    multiline: False
    padding: [25, (self.height-self.line_height)/2] # de stackoverflow. aparentemente es la mitad de la diferencia entre la linea de texto y el tama√±o del widget..

<MensErr>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:mens_err_et
            text: root.mens_err
            font_size: 15
            size_hint: 1, 1
        Button:
            text: "Cerrar aviso"
            size_hint: 1, 0.4
            on_press: app.root.cerrar()
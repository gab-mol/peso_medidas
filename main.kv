<PesoApp>:
    fechainput: fecha.text
    peso: peso
    rutaxlsx: ruta.text
    medsomx: medsomx
    medsomn: medsomn
    medbomx: medbomx
    medbomn: medbomn

    # spacing: 1
    BoxLayout:
        padding: 5
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgb: .8,.8,.8
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                font_size: ((self.height + self.width)/2)/9
                markup: True
                color: (0,0,0)
                text: "[b]Guardar registro peso\n y medidas abdominales[/b]"
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    size_hint: .1, 1 
                Label:
                    size_hint: .32, 1 
                    font_size: ((self.height + self.width)/2)/4.2
                    markup: True
                    color: (0,0,0)   
                    padding: [30, (self.height-self.line_height)/2]
                    text: "\nFecha del  \nregistro: "
                TextInput:
                    id: fecha
                    size_hint: .5, .6
                    padding: [10,10]
                    text: root.fechainput
                    font_size: ((self.height + self.width)/2)/4
                    multiline: False
                BoxLayout:
                    size_hint: .08, 1 
            BoxLayout:
                orientation: 'horizontal'
                padding: [10,3,8,2]
                spacing: .5
                BoxLayout:
                    size_hint: .01,.8
                Label:
                    size_hint: .28,.8
                    font_size: ((self.height + self.width)/2)/4.5
                    color: (0,0,0)
                    markup: True
                    text: "[b]   Ruta a\n  archivo:[/b]"
                TextInput:
                    id: ruta
                    size_hint: .70,.8
                    font_size: ((self.height + self.width)/2)/14
                    multinline: True
                    text: root.rutaxlsx
                BoxLayout:
                    size_hint: .01,.8
            BoxLayout:
                orientation: 'horizontal'
                padding: 3
                spacing: 1
                Button:
                    text: "Guardar"
                    font_size: ((self.height + self.width)/2)/5
                    on_press: root.guardar()
                Button:
                    text: "Configurar"
                    font_size: ((self.height + self.width)/2)/5
                    on_press: root.configurar()
                Button:
                    text: "Abrir\n xlsx"
                    font_size: ((self.height + self.width)/2)/5
                    on_press: root.abrir_xlsx()
                Button:
                    text: "   Otras\nopciones"
                    font_size: ((self.height + self.width)/2)/5
                    on_press: root.mas()

        GridLayout:
            cols: 2
            spacing: 1
            padding: 1
            canvas:
                Color:
                    rgb: 0,0,0
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                cols: 1
                spacing: 2
                LabelcB:
                    size_hint: 1, 1
                    font_size: ((self.height + self.width)/2)/5.5
                    markup: True
                    text: "[color=#000000]Peso (kg)[/color]"
                LabelcB:
                    size_hint: 1, 1
                    font_size: ((self.height + self.width)/2)/6.5
                    markup: True
                    text: "[color=#000000]Med.SO max\n    (cm)[/color]"
                LabelcB:
                    size_hint: 1, 1
                    font_size: ((self.height + self.width)/2)/6.5
                    markup: True
                    text: "[color=#000000]Med.SO min\n    (cm)[/color]"
                LabelcB:
                    size_hint: 1, 1
                    font_size: ((self.height + self.width)/2)/6.5
                    markup: True
                    text: "[color=#000000]Med.BO max\n    (cm)[/color]"
                LabelcB:
                    size_hint: 1, 1
                    font_size: ((self.height + self.width)/2)/6.5
                    markup: True
                    text: "[color=#000000]Med.BO min\n    (cm)[/color]"
            BoxLayout:
                orientation: 'vertical'
                spacing: 2
                canvas:
                    Color:
                        rgb: .8,.8,.8
                    Rectangle:
                        size: self.size
                        pos: self.pos
                CenteredTextInput:
                    id: peso
                    
                CenteredTextInput:
                    id: medsomx
                    
                CenteredTextInput:
                    id: medsomn
                    
                CenteredTextInput:
                    id: medbomx
                    
                CenteredTextInput:
                    id: medbomn
                
<LabelcB@Label>:
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<CenteredTextInput@TextInput>:
    multiline: False
    padding: [25, (self.height-self.line_height)/2] # de stackoverflow. aparentemente es la mitad de la diferencia entre la linea de texto y el tamaño del widget..
    font_size: ((self.height + self.width)/2)/4

<MensErr>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:mens_err_et
            text: root.mens_err
            font_size: 15
            size_hint: 1, 1
        Button:
            text: "Cerrar aviso"
            size_hint: 1, 0.4
            on_press: app.root.cerrar_adv_emerg()

<ConfEmerg>:
    dir_xlsx: dir_xlsx_input.text
    nombre_xlsx: nombre_xlsx_input.text

    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            text: "[b]Elegir nombre y carpeta \npara el libro excel[/b]"
            font_size: ((self.height + self.width)/2)/12
            size_hint: 1, .3
        BoxLayout:
            size_hint: 1, .5
            orientation: 'horizontal'
            BoxLayout:
                size_hint: .05, 1
            BoxLayout:
                size_hint: .45, 1
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, 1
                    spacing:20
                    padding:5
                    orientation: 'vertical'                
                    Label:
                        text: "  Nombre:"
                        font_size: ((self.height + self.width)/2)/4
                        padding: [25, (self.height-self.line_height)/2]
                        size_hint: 1, 1
                    Label:
                        text: "  Carpeta:"
                        font_size: ((self.height + self.width)/2)/4
                        padding: [25, (self.height-self.line_height)/2]
                        size_hint: 1, 1
            BoxLayout:
                size_hint: .45, 1
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, 1
                    spacing:10
                    orientation: 'vertical'
                    TextInput:
                        id: nombre_xlsx_input
                        multiline: False
                        padding: [25, (self.height-self.line_height)/2]
                        font_size: ((self.height + self.width)/2)/6
                        size_hint: 1, 1
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 5
                        TextInput:
                            id: dir_xlsx_input
                            multiline: True
                            text: root.dir_xlsx
                            size_hint: .7, 1

                        Button:
                            size_hint: .3,1
                            text: "Buscar"
                            on_press: root.buscador_dir()

            BoxLayout:
                size_hint: .05, 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .2
            padding: 8
            spacing: 10
            BoxLayout:
            Button:
                text: "Volver"
                font_size: 20
                size_hint: 0.7, 1
                on_press: app.root.current = "sinconf"
            Button:
                text: "Guardar"
                font_size: 20
                size_hint: 0.7, 1
                on_press: root.configurar()
            BoxLayout:

<Dialog>:
    orientation: 'vertical'
    Label:
        text: root.mensaje
        font_size: 15
        size_hint: 1, 1
    BoxLayout:
        orientation: 'horizontal'
        padding: 20
        Button:
            text: "Cerrar"
            size_hint: 1, 0.6
            on_press: 
                app.cerrar_dialog()
                app.root.current = "configur"

<PrimEjec>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            text: "[color=ff0000]No se encuentra configuraración previa.[/color]"
            font_size: ((self.height + self.width)/2)/12
            size_hint: 1, 1
        BoxLayout:
            size_hint: 1, 1
            orientation: 'horizontal'
            BoxLayout:
                size_hint: 0.25, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 1
                spacing: 20
                Button:
                    text: "Configurar"
                    font_size: ((self.height + self.width)/2)/6.5
                    size_hint: 1, .5
                    on_press: 
                        app.root.current = "configur"
                Button:
                    text: "Usar Predeterminados"
                    font_size: ((self.height + self.width)/2)/6.5
                    size_hint: 1, .5
                    on_press: 
                        root.confg_defoult()
            BoxLayout:
                size_hint: .25, 1
        BoxLayout:
            size_hint: 1, .3

